<h1>Listing recommendations</h1>

<table>
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Action</th>
      <th>Term</th>
      <th>Note</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @recommendations.each do |recommendation| %>
      <tr>
        <td><%= recommendation.symbol %></td>
        <td><%= recommendation.action %></td>
        <td><%= recommendation.term %></td>
        <td><%= recommendation.note %></td>
        <td><%= recommendation.price %></td>
        <td>
          <%= link_to 'Show', recommendation %>
          <%= link_to 'Edit', edit_recommendation_path(recommendation) %>
          <!-- <%= link_to 'Destroy', recommendation, method: :delete, data: { confirm: 'Are you sure?' } %> -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recommendation', new_recommendation_path %>
