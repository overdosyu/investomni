          <h4>
            <span class="label <%= ((recommendation.action == :buy) ? 'label-success' : (recommendation.action == :sell) ? 'label-danger' : 'label-warning')%>">
              <span class="<%= ((recommendation.action == :buy) ? 'glyphicon glyphicon-arrow-up' : (recommendation.action == :sell) ? 'glyphicon glyphicon-arrow-down' : '')%>"></span>
              <%= recommendation.symbol %>
            </span>
          </h4>
          <h3><%= title(recommendation) %></h3>
          <%= recommendation.note %>
        </div>
 -->
      <% end %>
    </div>
  <% end %>
  </div>



  <br><br><br><br><br>
  <%= link_to 'Edit', edit_user_profile_path %>
</div>
