<% page_title "Edit Profile" %>

<div class="user-profile edit well">
  <%= image_tag @user_profile.avatar.url(:normal).to_s, :class => "img-circle avatar" %>
  <br><br>

  <%= form_for @user_profile, html: {role: "form"} do |f| %>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :avatar %><br>
      <div class="input-group">
        <span class="input-group-btn">
          <span class="btn btn-primary btn-file">
           Choose&nbsp;
           <span class="glyphicon glyphicon-picture"></span>
           <%= f.file_field :avatar %>
          </span>
        </span>
        <%= text_field_tag nil, nil, class: "form-control", placeholder: "No Image Chosen", readonly: true %>
      </div>
    </div>
    <br>

    <button type="submit" class="btn btn-primary btn-lg btn-block">
      <span class="glyphicon glyphicon-edit"></span>&nbsp;
      Save Profile
    </button>
  <% end %>
</div>