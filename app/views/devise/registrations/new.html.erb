<div class="devise registrations well">
  <h3 class="title">Create an Account</h3>
  <br>

  <%= button_to user_omniauth_authorize_path(:facebook), :class => "btn btn-facebook btn-lg btn-block" do %>
    Sign in with Facebook
  <% end %>

  <hr>

  <%= form_for resource, :as => resource_name, :url => registration_path(resource_name), html: {role: "form"} do |f| %>
    <%= devise_error_messages! %>

    <p>Or be old fashioned...</p>

    <%= f.email_field :email, class: "form-control", placeholder: "Email Address", autofocus: true %>
    <br>

    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    <br>

    <button type="submit" class="btn btn-default btn-lg btn-block">
      <span class="glyphicon glyphicon-ok-circle"></span>&nbsp;
      Join investomni
    </button>
  <% end %>

  <br>
  <%= render "devise/shared/links" %>
</div>
